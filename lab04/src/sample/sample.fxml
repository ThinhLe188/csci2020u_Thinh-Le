<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_left" styleClass="bg" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label fx:id="nameLabel" text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label fx:id="passwordLabel" text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label fx:id="fullNameLabel" text="Full Name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label fx:id="emailLabel" text="E-Mail: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="invalidEmailLabel" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label fx:id="phoneLabel" text="Phone #: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="invalidPhoneLabel" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label fx:id="dateLabel" text="Date of Birth: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker id="datePicker" fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button id="enterBtn" fx:id="enterBtn" onAction="#btnOnPress" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="6" />

</GridPane>